<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.motivus.jdeskapp.rps.RockPaperScissorsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="applicationTitle"/>
    <Button text="Rock" onAction="#onRockButtonClick"/>
    <Button text="Paper" onAction="#onPaperButtonClick"/>
    <Button text="Scissors!" onAction="#onScissorsButtonClick"/>
</VBox>
